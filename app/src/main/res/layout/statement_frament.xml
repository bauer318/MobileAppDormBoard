<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/statement_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/ads_background"
        android:layout_margin="5dp"
        >
        <TextView
            android:id="@+id/text_statement_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_ads_date"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            style="@style/SubtitleTextStyle"
            />
        <TextView
            android:id="@+id/text_statement_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_ads"
            android:layout_below="@id/text_statement_date_time"
            android:layout_centerInParent="true"
            style="@style/SubtitleTextStyle"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>